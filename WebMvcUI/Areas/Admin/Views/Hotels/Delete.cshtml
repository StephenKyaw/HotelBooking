@model Hotel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="card">
    <div class="card-header">
        <h3 class="text-secondary mb-2">Are you sure you want to delete this?</h3>
    </div>
    <div class="card-body">
        <dl class="row border p-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone_1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone_1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone_2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone_2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone_3)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone_3)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.City.CityName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Township)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Township.TownshipName)
            </dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="HotelId" />
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </form>
    </div>
</div>
