@{
    var contentHeader = ViewData["ContentHeader"] as ContentHeaderViewModel ??
                                new ContentHeaderViewModel();
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">@contentHeader.Title</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    @foreach (var item in contentHeader.Breadcrumbs)
                    {
                        if (!item.IsActive)
                        {
                            <li class="breadcrumb-item"><a asp-controller="@item.ControllerName" asp-action="@item.ActionName" asp-area="@item.AreaName">@item.Title</a></li>
                        }
                        else
                        {
                            <li class="breadcrumb-item active">@item.Title</li>
                        }
                    }
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
