@model FacilityTypeViewModel
@{
    ViewData["Title"] = ViewBag.Title;
}

<div class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="FacilityTypeId" />
                    <div class="form-group mb-3">
                        <label asp-for="FacilityTypeName" class="control-label"></label>
                        <input asp-for="FacilityTypeName" class="form-control" />
                        <span asp-validation-for="FacilityTypeName" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3 d-flex">
                        <input type="submit" value="Save" class="btn btn-success mr-2" />
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
